@import url('https://fonts.googleapis.com/css?family=Bitter');

.sidebar
  display: none
  width: calc(100% - 2 * 15px)
  height: calc(100% - 2 * 15px)
  padding: 15px
  box-shadow: 2px 0 2px -2px rgba(0, 0, 0, 0.15)
  position: fixed
  left: 0
  top: 0
  background-color: #fff
  z-index: 3
  overflow: scroll

  &--open
    display: block

  & h1
    margin-top: 0

  & p
    font-family: Bitter, sans-serif
    line-height: 25px

  & hr
    border: none
    height: 1px
    background-color: grey
    width: 10%
    margin: 25px auto

.toggle-button
  position: fixed
  z-index: 4
  left: 50%
  bottom: 10px
  width: 50px
  height: 50px
  background-color: white
  border: none
  border-radius: 50%
  transform: translate(-50%, -10px)
  padding: 0
  display: flex
  align-items: center
  justify-content: center
  transition: background-color 200ms ease, color 200ms ease

  &--toggled
    background-color: #000
    color: #fff
    bottom: 10px

  &:focus
    outline: none

.brush-container
  position: fixed
  bottom: 0
  width: 100%
  background-color: #fff
  z-index: 2

.brush
  height: 10%

  & .selection
    stroke-width: 5px
    stroke: #000

body.brush-demo
  .toggle-button
    bottom: 10%

    &--toggled
      bottom: 10px

  .mapboxgl-ctrl-bottom-left,
  .mapboxgl-ctrl-bottom-right
    bottom: 10%

@media (min-width:1025px)
  .sidebar
    display: block
    width: calc(400px - 2 * 15px)
    height: 100%
    z-index: 1

  .toggle-button
    display: none

  .brush
    height: 100px

  body.brush-demo
    .mapboxgl-ctrl-bottom-left,
    .mapboxgl-ctrl-bottom-right
      bottom: 100px

