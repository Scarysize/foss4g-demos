html, body
  width: 100%
  height: 100%
  padding: 0
  margin: 0
  display: flex
  align-items: center
  justify-content: center

.container
  width: 500px
  height: 500px
  background-color: #fff
  box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
  margin: 12px

body.brush
  flex-direction: column

.brush
  & .container
    width: 765px
    height: 765px

  & .bar:hover
    fill: #fff

  & .temp-display
    width: 250px
    height: 60px
    position: absolute
    left: 50%
    background-color: white
    transform: translateX(-50%)
    border-bottom-left-radius: 5px
    border-bottom-right-radius: 5px
    line-height: 60px
    text-align: center
    font-size: 24px
